    <style>
        * {
            box-sizing: border-box;
            padding: 0;
            margin: 0;
        }

        body {
            background: #fff;
            font-family: "Noto Sans", sans-serif;
            color: #444;
            font-size: 14px;
        }


        .main-content {
            display: grid;
            min-height: 20vh;
            grid-template-rows: repeat(2, 45px) 115px 60px auto;
            max-width: 100%;
        }

        .main-content>div {
            max-width: 100%;
        }

        .title {
            background: #3A98B9;
            text-align: center;
            display: grid;
            place-content: center;
            color: #fff;
        }

        .cell-content {
            border: 1px solid #78C1F3;
            background: #78C1F3;
            padding: 10px;
            display: flex;
            grid-template-columns: 50px auto;
        }

        .cell-content div {
            border: 1px solid #9BE8D8;
            background: #fff;
            align-items: center;
            width: 50px;
        }

        .cell-content div:nth-child(2) {
            justify-content: center;
            color: #999;
            width: calc(100% - 50px) !important;
            font: italic 700 18px "Merriweather", serif;
            border-right: none;
        }

        .cells {
            position: relative;
            background: #9BE8D8;
            overflow: hidden;
        }

        .cells__spacer {
            background: #78C1F3;
            position: relative;
        }

        .cells__spacer:after {
            content: "";
            position: absolute;
            right: 4px;
            bottom: 4px;
            height: 80%;
            width: 100%;
            background: linear-gradient(135deg, transparent 30px, #bbb 30px, #bbb 55px, transparent 55px);
        }

        .cells__alphabet {
            background: #78C1F3;
        }

        .cells__number {
            background: #78C1F3;
            grid-column: 1/span 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .cells__input {
            border: none;
            padding: 0 6px;
        }

        .cells input,
